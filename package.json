{
  "name": "demoapp-api",
  "version": "0.0.1",
  "description": "basic api for demo purposes",
  "main": "dist",
  "author": "https://github.com/rjchaveiro",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^3.0.4",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "express-session": "^1.15.6",
    "graphql": "^14.1.1",
    "graphql-playground-middleware-express": "^1.7.11",
    "graphql-tools": "^4.0.4",
    "jsonwebtoken": "^8.5.0",
    "mongoose": "^5.4.15"
  },
  "scripts": {
    "start": "cross-env NODE_PATH=src/:src nodemon -w src --exec \"babel-node src --presets es2015,stage-0\"",
    "build": "cross-env NODE_PATH=src/:src babel src -s -D -d dist --presets es2015,stage-0",
    "test": "eslint src",
    "prettier": "prettier --write 'src/**/*.js'"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "devDependencies": {
    "@playlyfe/gql": "^2.6.1",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.1.1",
    "nodemon": "^1.9.2",
    "prettier": "^1.16.4"
  }
}
